#include <iostream>
#include <string>
using namespace std;
void Upper(string & str);
int main(void){
    string str;
    cout << "Введите строку (для завершения введите q):";
    while ( cin >> str) {
        if(str == "q")
            break;
        else{
            Upper(str);
            cout << "Следующая строка (для завершения введите q):";
        }
    }
    cout << endl;
    return 0;
}
void Upper(string & str){
    for(int i = 0; str[i] != '\0'; i++)
        str[i] = toupper(str[i]);
    cout << str << endl;
}

