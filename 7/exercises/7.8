#include <iostream>
using namespace std;

const int SLEN = 30;

struct student {
    char fullname[SLEN];
    char hobby[SLEN];
    int ooplevel;
};

int getinfo(student pa[], int size);
void display1(student st);
void display2(const student *ps);
void display3(const student pa[], int n);

int main(){
    cout << "Введите размер класса: ";
    int class_size;
    cin >> class_size;
    while (cin.get() != '\n') {
        continue;
    }
    student *ptr_stu = new student[class_size];
    int entered = getinfo(ptr_stu, class_size);
    for(int i = 0; i < entered; i++){
        display1(ptr_stu[i]);
        display2(&ptr_stu[i]);
    }
    display3(ptr_stu, entered);
    delete []ptr_stu;
    cout << "Done!" << endl;
  
    cout << endl;
    return 0;
}

int getinfo(student pa[], int size){
    int i = 0;
    for(i = 0; i < size; i++){
        cout << "Введите полное имя студента №" << i+1 << ": ";
        cin.getline(pa->fullname, SLEN);
        cout << "Введите хобби студента №" << i+1 << ": ";
        cin.getline(pa->fullname, SLEN);
        cout << "Введите уровень понимания ООП студента №" << i+1 << ": ";
        cin >> pa->ooplevel;
        pa++;
    }
    return i;
}

void display1(student st){
    cout << "Студент: " << st.fullname <<", имеет хобби: " << st.hobby
    << " и уровени ООП стостовляет = " << st.ooplevel << endl;
}

void display2(const student *ps){
    cout << "Студент: " << ps->fullname <<", имеет хобби: " << ps->hobby
    << " и уровени ООП стостовляет = " << ps->ooplevel << endl;
}
void display3(const student pa[], int n){
    for(int i = 0; i < n; i++){
        cout << "Студент: " << pa->fullname <<", имеет хобби: " << pa->hobby
        << " и уровени ООП стостовляет = " << pa->ooplevel << endl;
        pa++;
    }
}

