#include <iostream>
using namespace std;

const int ArSize = 8;

int sum_arr(int arr[], int n);

int main(){
    int cookies[ArSize] = {1,2,4,8,16,32,64,128};
    cout << cookies << " = адрес массива, ";
    cout << sizeof cookies << " = sizeoff cookies" << endl;
    int sum = sum_arr(cookies, ArSize);
    cout << "Всего съедено печенья: " << sum << endl;
    sum = sum_arr(cookies, 3);
    cout << "Первые три едока умяли " << sum << " печений. \n";
    sum = sum_arr(cookies + 3, 5);
    cout << "Последние пять едоков схрумкали " << sum << " печений. \n";
    cout << endl;
    return 0;
}
int sum_arr(int arr[], int n){
    int total = 0;
    cout << arr << " = arr, ";
    cout << sizeof arr << " = sizeoff arr" << endl;
    for(int i = 0; i < n; i++){
        total = total + arr[i];
    }
    return total;
}

