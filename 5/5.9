#include <iostream>
#include <string>
#include <cstring>

using namespace std;



int main(){
    int count;
    cout << "Введите количество строк: ";
    char dot = '.';
    char star = '*';
    cin >> count;
        for(int i = 0, a = 0, b = 1; i < count, a < count, b <= count; i++, a++, b++){
            for(int l = a; l < count - 1; l++){
                cout << dot;
            }
            for (int k = b; k > 0; k--){
                cout << star;
            }
            cout << endl;
        }
    cout << endl;
    return 0;
}




