#include <iostream>
using namespace std;

const int ArSize = 10;

void countstr(const char * str);

int main(){
    char input[ArSize];
    char next;
    cout << "Введите строку: " << endl;
    cin.get(input, ArSize);
    while (cin) {
        cin.get(next);
        while (next != '\n')
            cin.get(next);
        countstr(input);
        cout << "Введите следующую строку (или пустую строку для завершения) :\n";
        cin.get(input, ArSize);
    }
    cout << "Good!" << endl;
    return 0;
}
void countstr(const char * str){
    static int total = 0;
    int count = 0;
    cout << "\"" << str <<"\" содержит ";
    while (*str++)
        count++;
    total += count;
    cout << count << " символов" << endl;
    cout << "Всего символов - " << total << endl;
}

