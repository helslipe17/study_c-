#include <iostream>
#include <new>
using namespace std;

const int BUF = 512;
const int N = 5;

char buffer[BUF];

int main(){
    double *pd1, *pd2;
    int i;
    cout << "Вызов обычной и операции new с адресацией:" << endl;
    pd1 = new double[N];
    pd2 = new (buffer) double[N];
    for(i = 0; i < N; i++)
        pd2[i] = pd1[i] = 1000 + 20.0 * i;
    cout << "Адреса буфера:\n" << " куча: " << pd1
    << " статический: " << (void *) buffer << endl;
    cout << "Содержимое буфера:\n";
    for(i = 0; i < N; i++){
        cout << pd1[i] << " at " << &pd1[i] << "; ";
        cout << pd2[i] << " at " << &pd2[i] << endl;
    }
    cout << "\nВторой вызов обычной и операции new с адресацией:\n";
    double *pd3, *pd4;
    pd3 = new double[N];
    pd4 = new (buffer) double[N];
    for(i = 0; i < N; i++)
        pd4[i] = pd3[i] = 1000 + 20.0 * i;
    cout << "Содержимое буфера:\n";
    for(i = 0; i < N; i++){
        cout << pd3[i] << " at " << &pd3[i] << "; ";
        cout << pd4[i] << " at " << &pd4[i] << endl;
    }
    cout << "\nТретий вызов обычной и операции new с адресацией:\n";
    delete [] pd1;
    pd1 = new  double[N];
    pd2 = new (buffer + N * sizeof(double)) double[N];
    for(i = 0; i < N; i++)
        pd2[i] = pd1[i] = 1000 + 20.0 * i;
    cout << "Содержимое буфера:\n";
    for(i = 0; i < N; i++){
        cout << pd1[i] << " at " << &pd1[i] << "; ";
        cout << pd2[i] << " at " << &pd2[i] << endl;
    }
    delete []pd1;
    delete []pd3;
    return 0;
}
